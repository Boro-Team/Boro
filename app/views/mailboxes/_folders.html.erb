<ul class="list-inline">
  <li class="<%= active_page(:inbox) %>">
    <%= link_to mailboxes_inbox_path do  %>
        <span class="label label-danger mailbox_tabs"><%=unread_messages_count%></span>
        <em class="fa fa-inbox fa-lg"></em>
        <span>Inbox</span>
    <% end %>
  </li>
  <li class="<%= active_page(:sent) %>">
    <%= link_to mailboxes_sent_path do %>
        <em class="fa fa-paper-plane-o fa-lg"></em>
        <span>Sent</span>
    <% end %>
  </li>

  <li class="<%= active_page(:archive) %>">
    <%= link_to mailboxes_archive_path do %>
        <em class="fa fa-trash-o fa-lg"></em>
        <span>Archive</span>
    <% end %>
  </li>
</ul>