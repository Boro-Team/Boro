<div id="body_index">

<div class="form-inline"> <!-- id="flex_form" -->
<%= form_tag("/users", method: "get", class:"input-group-addon") do %>
  <%= label_tag(:location, "Find users in:") %>
	<input id="geo" class="form-control" type="text" placeholder="Type in an address" />
  <%= hidden_field_tag(:formatted_address) %>
  <%= label_tag(:range, "Within how many km:") %>
  <%= select_tag("range", "<option>0</option><option>10</option><option>20</option><option>50</option><option>100</option>".html_safe,class:"form-control")%>
  <%= submit_tag("Search", class: 'btn btn-primary') %>
<% end %>
</div>

<div> <!-- style='width: 800px;' -->
  <div id="search_map"></div> <!-- style='width: 800px; height: 400px;' -->
</div>

<!-- USERS INDEX -->

<div class="container">

  <hgroup class="mb20 fluid-container">
			<h1 class="col-lg-12" style="text-align: center; margin-top: 4.5rem;">Search Results</h1>
			<h2 class="lead"><strong class="text-danger">3</strong> Users were found for the search for <strong class="text-danger">USER</strong></h2>								
	</hgroup>

    <section class="col-xs-12 col-sm-6 col-md-12">
    <% @users.each do |u| %>
		<article class="row">
		<div class="col-xs-12 col-sm-12 col-md-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-3">
				<%= link_to image_tag(u.avatar.thumb.url, class: "img-circle") + "#{u.first_name} #{u.last_name}", user_path(u.id) %>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-2">
				<ul class="meta-search">
					<li>
					<i class="fa fa-calendar"></i>Joined on <span><%= u.created_at.strftime("%d %B %Y") %></span></li>
					<li><i class="fa fa-time"></i>From <span><%= u.locality %></span></li>
					<li><i class="fa fa-tags"></i>Has <span><%= u.items.count %> item<%= "s" unless (u.items.count == 1) %> for rent</span></li>
				</ul>
			</div>
	
			<span class="clearfix borda"></span>
		</article>
		<hr>
		<% end %>
	</section>
</div>
</div>

<!-- END -->
<script type="text/javascript">
buildMap(<%=raw @hash.to_json %>)
</script>

