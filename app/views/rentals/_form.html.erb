  startDate: "+1d",
  endDate: "+1y +1d"
  });

  var date_debut, date_fin; 

  // Calculate the DURATION

  var parseDate = function(input){
    date = Date.parse(input);
    return date;
  };

  $("#rental_start_date").change(function(){
