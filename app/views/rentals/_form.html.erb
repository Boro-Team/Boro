<div class="row">
    <div class="center-block col-md-4" style="float: none; padding-left: 11.5REM;">  
  <!-- ANOTHER FORM IN RAILS -->
  <h2></h2>
  <h1><%= @item.title %></h1>

  <%= form_for ([@item, @rental]) do |form| %>
      

  <h3>Delivery Date:</h3>
      <%= form.label :start_date %>
