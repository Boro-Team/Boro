

<div class="row" style="margin-left: 25px">
  <div class="spacer"></div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailboxes/folders' %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= render partial: 'messages' %>
      </div>

      <div class="panel-footer">


        <!-- Reply Form -->
        <%= form_for :message, url: reply_conversation_path(conversation), html: {class: "conversations"} do |f| %>
          <div class="row">
            <div class="form-group col-md-12 text-right">
              <%= f.text_area :body, placeholder: "Reply Message", rows: 4, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <% if conversation.is_trashed?(current_user) %>
                <%= link_to 'Unarchive', unarchive_conversation_path(conversation), class: 'btn btn-info pull-left', method: :post %>
              <% else %>
                <%= link_to 'Move to Archive', archive_conversation_path(conversation), class: 'btn btn-danger pull-left', method: :post,
                  data: {confirm: 'Are you sure?'} %>
              <% end %>
              <%= f.submit "Reply", class: 'btn btn-danger pull-right' %>
            </div>
          </div>
        <% end %>
        <div class="clearfix"></div>


      </div>
    </div>
  </div>
</div>





