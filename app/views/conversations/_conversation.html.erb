<div class="media">
  <div class="media-left">
    <a href="<%= user_path(conversation.originator) %>">
      <% if conversation.originator.avatar.thumb.url %>
      <img class="media-object" src=<%= conversation.originator.avatar.thumb.url %> alt="...">
      <% end %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= conversation.originator.full_name %> <br>
      <small><b>Subject: </b><%= conversation.subject %></small><br>
      <small><b>Date: </b><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
    </h4>
    <b><%= truncate conversation.messages.last.body, length: 145 %></b>
    <%= link_to "View", conversation_path(conversation), class: 'btn btn-info pull-right' %>
  </div>
</div>