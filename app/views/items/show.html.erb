<div class="container">

  <div class="sets col-xs-12 col-sm-6 col-md-12">
   <div class="col-xs-12 col-sm-12 col-md-2">
    <h1><%= @item.title %></h1>
    <%= image_tag (@item.avatar.large.url) %>
    </div>
  </div>
  <div class="sets col-xs-12 col-sm-6 col-md-12">
   <div class="col-xs-12 col-sm-12 col-md-4">
    <h3><%= @item.description %></h3>
  </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-12">
  <ul class="meta-search" >
    <div class="footer-color col-xs-12 col-sm-12 col-md-2">
        <li><i class="fa fa-money fa-3 large_fav"></i><span style="font-size: 20px"> MYR<%= @item.price_per_day %></span></li>
    </div>
    <div class="footer-color col-xs-12 col-sm-12 col-md-2">
      <li><i class="fa fa-location-arrow fa-3 large_fav"></i><span style="font-size: 20px"><%= @item.user.locality %></span></li>
    </div>
    <div class="footer-color col-xs-12 col-sm-12 col-md-2">
      <li><i class="fa fa-tag fa-3 large_fav"></i> <span style="font-size: 20px"><%= @item.tag_list.first %></span></li>
    </div>
    </ul>
  </div>

<br>
<br><br>
<br><br>
<br>

<br><br><br>
<hr>
<div class="sets col-xs-12 col-sm-6 col-md-12" style="padding-bottom: 20px">
   <div class="col-xs-12 col-sm-12 col-md-4">
      <h3>Rent now from:</h3>
      <h2><%= @item.user.first_name %></h2>

      <% if @item.user.avatar.present? %>
        <span>
        <img src="<%= @item.user.avatar.thumb.url %>" class="img-circle" alt="">
        </span>
      <% else %>
        <img class="avatar" src="http://placehold.it/64x64">
      <% end %>
    </div>
</div>
<br>
<br>
<div class="row" style="padding-top: 20px">
  <div class="col-md-12">
  <div class="col-xs-12 col-sm-12 col-md-1">
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4">
    <%= link_to "Ask a question", new_conversation_path(item_id: @item.id), class: "btn btn-info" %>

    <%= link_to "Book now", new_item_rental_path(item_id: @item.id), class: "btn btn-success" %>
  </div>
</div>
</div>
 
  <% if @item.user==current_user %>
  <div>

  <%= link_to "Edit", edit_item_path(@item.id), method: :get %>
  <%= link_to "Delete", item_path(@item.id), method: :delete %>
</div>
<% end %>
</div>